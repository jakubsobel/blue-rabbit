---
export const prerender = true;
import { Image } from "astro:assets";
import kindleImg from "../assets/kindle.png"; // Image is 1600x900
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Index" headerColor="red">
  <!-- Can't use 1600 here because of the bug, so let's use 1599 (also set in Vercel Image Optimisation config) -->
  <Image
    src={kindleImg}
    alt="Kindle reader held in hand displaying a random page from some book."
    loading="eager"
    fetchpriority="high"
    widths={[320, 640, 960, 1599]}
    sizes="100vw"
  />
</BaseLayout>
